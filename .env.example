# === Stock Trader AI - 环境配置 ===

# === 后端服务配置 ===
PORT=5000

# === 数据库配置（可选）===
# 如果不配置数据库，系统将使用本地内存模拟（演示模式）
DB_HOST=localhost
DB_USER=root
DB_PASS=password
DB_NAME=stock_trader

# === JWT 密钥（必需）===
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# === 前端环境配置 ===
# React 应用的 API 基础 URL
# 本地开发: http://localhost:5000/api
# 生产环境: https://yourdomain.com/api（若使用反向代理）
REACT_APP_API_URL=http://localhost:5000/api

# === API 超时配置（毫秒）===
REACT_APP_API_TIMEOUT=10000

# === API 重试配置 ===
REACT_APP_API_RETRY=3
REACT_APP_API_RETRY_DELAY=1000

# === Gemini API 配置（可选）===
REACT_APP_GEMINI_API_KEY=your-gemini-api-key-here

# === 调试模式 ===
DEBUG=false
ENABLE_MOCK_DATA=true
